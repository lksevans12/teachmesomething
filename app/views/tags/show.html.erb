<div class = "container">

  <h1> Posts tagged with <%= @tag.title %></h1>

  <div class = "row">
    <% @tag.posts.each do |post| %>
      <div class=" col-xs-10 col-s-6 col-md-4 portfolio-item">
        <ol>
          <li><p><%= image_tag(post.photo.url, size: "700x400", :class => "img-circle img-responsive") %> </p><p><%= link_to post.title, post_path(post.id) %></p>
          <p>by <%= link_to post.user.username, user_path(post.user.id) %></p></li>
        </ol>
      </div>
    <%end%>
  </div>
  <div class="pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
  </div>
</div>