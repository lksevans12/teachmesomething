<a name="about"></a>
<div class="intro-header">
  <div class = "container">
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <h1>What do you want to learn today?</h1>
          <h3>Join our community of knowledge</h3>
          <hr class="intro-divider">
          <ul class="list-inline intro-social-buttons">
              <li>
                  <%= link_to 'Login', login_path, class: "btn btn-default btn-lg" %>
              </li>
              <li>
                  <%= link_to 'Signup', signup_path, class: "btn btn-default btn-lg"%>
              </li>

          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class = "all-posts">
    <% @posts.each do |post| %>
    <div class=" col-xs-6 col-s-10 col-md-4 portfolio-item">
      <hr class="section-heading-spacer">
        <li><%= image_tag(post.photo.url, size: "700x400", :class => "img-circle img-responsive") %> <h3><%= link_to post.title, post_path(post.id) %><h3>
        By: <%= link_to post.user.username, user_path(post.user.id) %></li>
    </div>
    <% end %>
  </div>
</div>
