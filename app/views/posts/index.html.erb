<header class="business-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 id = "tagline">Explore all posts</h1>
      </div>
    </div>
  </div>
</header>

<div class = "container">
  <div class="row">
    <div class = "all-posts">
      <% @posts.each do |post| %>
        <div class=" col-xs-6 col-s-10 col-md-4 portfolio-item">
          <li><%= link_to image_tag(post.photo.url, size: "350x200", :class => "img-circle"), post_path(post.id) %> 
            <h3><%= link_to post.title, post_path(post.id), class: "link-post" %></h3></li>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
  </div>
</div>
