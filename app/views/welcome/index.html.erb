<a name="about"></a>
<div class="intro-header">
  <div class = "container">
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <h1>What do you want to learn today?</h1>
          <h3>Join our community of knowledge</h3>
          <hr class="intro-divider">
          <ul class="list-inline intro-social-buttons">
            <% if logged_in? %>
              <li><%= link_to 'Create a new post', new_post_path, class: "btn btn-default btn-lg" %></li>
            <% else %>
              <li>
                  <%= link_to 'Login', login_path, class: "btn btn-default btn-lg" %>
              </li>
              <li>
                  <%= link_to 'Signup', signup_path, class: "btn btn-default btn-lg"%>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class = "container">
  <h1 id = "new-posts"> Newest Posts </h1>
  <div class="row">
    <div class = "all-posts">
      <% @posts.each do |post| %>
      <div class=" col-xs-6 col-s-10 col-md-4 portfolio-item">
        <hr class="section-heading-spacer">
          <li><%= link_to image_tag(post.photo.url, size: "700x400", :class => "img-circle img-responsive"), post_path(post.id) %> 
            <h3><%= link_to post.title, post_path(post.id), class: "link-post" %><h3>
      </div>
      <% end %>
    </div>
  </div>
</div>
